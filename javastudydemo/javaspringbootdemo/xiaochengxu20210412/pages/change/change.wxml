<view class="container">
  <view class="tip" wx:if="{{first}}">第一次注册送1000积分，可当现金用</view>
  <view class='item_root'>
    姓名(必填)：
    <input class="textarea25px" bindinput="bindinputusername" value="{{username}}" maxlength='10' />
  </view>
  <view class='item_root'>
    电话(必填)：
    <input class="textarea25px" bindinput="bindinputphone" value="{{phone}}" maxlength='11' />
  </view>
  <view class='item_root'>
    桌号(选填)：
    <input class="textarea25px" bindinput="bindinputzhuohao" value="{{zhuohao}}" maxlength='15' />
  </view>
  <view class='item_root'>
    就餐人数(选填)：
    <input class="textarea25px" bindinput="bindinputrenshu" value="{{renshu}}" maxlength='15' />
  </view>
</view>
<!-- 提交按钮 -->
<button class='btn_fabu' bindtap='formSubmit' type='primary'>提交修改</button>